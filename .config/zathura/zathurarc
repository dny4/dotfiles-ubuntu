set window-title-basename "true"
set statusbar-home-tilde "true"
set selection-clipboard "clipboard"
set font "FiraCode NFM 12"

#
# Based On Dracula color theme "https://github.com/dracula/zathura/blob/master/zathurarc"
#

set notification-error-bg       "#ff5555" # Red
set notification-error-fg       "#c9d1d9" # Foreground
set notification-warning-bg     "#ffb86c" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#24273a" # Background
set notification-fg             "#c9d1d9" # Foreground

set completion-bg               "#24273a" # Background
set completion-fg               "#6272a4" # Comment
set completion-group-bg         "#24273a" # Background
set completion-group-fg         "#6272a4" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#c9d1d9" # Foreground

set index-bg                    "#24273a" # Background
set index-fg                    "#c9d1d9" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#c9d1d9" # Foreground

set inputbar-bg                 "#24273a" # Background
set inputbar-fg                 "#c9d1d9" # Foreground
set statusbar-bg                "#24273a" # Background
set statusbar-fg                "#c9d1d9" # Foreground

set highlight-color             "#ffb86c" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#24273a" # Background
set default-fg                  "#c9d1d9" # Foreground

set render-loading              true
set render-loading-fg           "#24273a" # Background
set render-loading-bg           "#c9d1d9" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#24273a" # Background
set recolor-darkcolor           "#c9d1d9" # Foreground

#
# Startup options
#
set adjust-open width
# set recolor false
